<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#eee"
                android:centerY="0.75"
                android:endColor="#eee"
                android:startColor="#eee" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#EE5C42"
                    android:centerY="0.75"
                    android:endColor="#EE5C42"
                    android:startColor="#EE5C42" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#EE0000"
                    android:centerY="0.75"
                    android:endColor="#EE0000"
                    android:startColor="#EE0000" />
            </shape>
        </clip>
    </item>

</layer-list>